<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    
    <Table id="startTable"
		inset="false"
		items="{path: '/'}">
		<columns>
			<Column
				width="12em">
				<Text text="Order" />
			</Column>
			<Column>
				<Text text="Material" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
				    <Label text="{path: 'OrderID', formatter: '.formatter.removeLeadingZero'}" design="Bold"/>
				    <Text text="{Material}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    
</core:FragmentDefinition>